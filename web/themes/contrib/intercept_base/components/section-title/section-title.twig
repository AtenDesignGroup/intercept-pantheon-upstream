{% import '@intercept-base-components/component.twig' as component %}
{% import '@intercept-base-components/icons/icon.twig' as icon %}
{{ attach_library('intercept_base/section-title') }}

<{{tag|default('h2')}} {{ component.attributes('section-title', modifiers, attr) }}>
  {% if href %} <a href="{{href}}" class="section-title__link">{% endif %}
  {% if title %}<span>{{ title }}</span>{% endif %}
  {% if href %}&nbsp;{{icon.inline('arrow')}}</a>{% endif %}
  {% if subtext %}<small>{{ subtext }}</small>{% endif %}
</{{tag|default('h2')}}>
