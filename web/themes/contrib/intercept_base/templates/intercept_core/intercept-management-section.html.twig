{{ attach_library('intercept_base/intercept-management-section') }}
<section class="intercept-management-section l--section">
  {% if title %}
    {% include '@intercept-base-components/section-title/section-title.twig' with {
      title: title,
    } only %}
  {% endif %}
  {% if actions %}
  <ul class="intercept-management-section__actions">
    {% for action in actions %}
    {% if action['#link']|render %}
    <li class="intercept-management-section__actions-item">{{ action }}</li>
    {% endif %}
    {% endfor %}
  </ul>
  {% endif %}
  {% if content %}
  <div class="intercept-management-section__content">
    {{ content }}
  </div>
  {% endif %}
</section>
