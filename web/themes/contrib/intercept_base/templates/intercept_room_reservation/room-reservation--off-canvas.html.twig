<article{{ attributes.addclass(['room-reservation']) }}>
  <div class="l--1-col l--offset l--padded">
    <div class="l__primary">
      {% if content.messages %}
        <div class="l--subsection">
          {{ content.messages }}
        </div>
      {% endif %}
      <div class="l--subsection" id="room-reservation-status">
        {{ content.field_status }}
      </div>
      {% if edit_link %}
        <div class="form-actions--operations" id="room-reservation-operations">
          {{ edit_link }}
        </div>
      {% endif %}
      {% if addtocalendar %}
        <div class="form-actions--operations" id="room-reservation-addtocalendar">
          {{ addtocalendar }}
        </div>
      {% endif %}

      {% if content %}
        <div class="l--subsection">
          <h2>{{'Reservation Details'|t}}</h2>
          {{ content|without('field_status', 'field_user', 'field_guest', 'messages') }}
        </div>
      {% endif %}

      {% if content.field_user|render|striptags|trim %}
        <div class="l--subsection">
          <h2>{{'Customer'|t}}</h2>
          {{ content.field_user }}
        </div>
      {% endif %}

      {% if content.field_guest|render|striptags|trim %}
        <div class="l--subsection">
          <h2>{{'Guest Reservation'|t}}</h2>
          {{ content.field_guest }}
        </div>
      {% endif %}

    </div>
  </div>
</article>
