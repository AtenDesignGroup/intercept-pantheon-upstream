{% import '@intercept-base-components/more-link/more-link.twig' as more_link %}
{%
  set classes = [
    dom_id ? 'js-view-dom-id-' ~ dom_id,
    'l--section'
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {% if rows %}
    <h2>{{ "Follow Up on Your Most Recent Event"|t }}</h2>
  {% endif %}

  {{ title_prefix }}
  {{ title }}
  {{ title_suffix }}

  {% if header %}
    <header>
      {{ header }}
    </header>
  {% endif %}

  {{ exposed }}
  {{ attachment_before }}

  {% if rows %}
    <div class="view__content">
      {{ rows }}
    </div>
  {% elseif empty %}
    <div class="view__empty">
      {{ empty }}
    </div>
  {% endif %}
  {{ pager }}

  {{ attachment_after }}
  {% if more %}
  {% include more_link with {
    text: more['#title'],
    url: more['#url']|render
  } %}
  {% endif %}

  {% if footer %}
    <footer>
      {{ footer }}
    </footer>
  {% endif %}

  {{ feed_icons }}
</div>
