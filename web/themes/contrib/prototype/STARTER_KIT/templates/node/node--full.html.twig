<article{{ attributes.addClass(['article']) }}>

  <header class="article__header l--offset">
    {{ title_prefix }}
    {% include '@STARTER-KIT-components/page-title/page-title.twig' with {
      text: label
    } only %}
    {{ title_suffix }}
  </header>

  <div class="l--1-col l--offset">
    <div class="l__primary">
      {% if content %}
        {{ content }}
      {% endif %}
    </div>
  </div>
</article>
